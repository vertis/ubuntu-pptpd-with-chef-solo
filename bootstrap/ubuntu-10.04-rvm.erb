echo "Installing RVM and Chef"
if [ ! -L /usr/bin/chef-solo ]; then

  apt-get update
  apt-get install -y git-core curl
  apt-get install -y build-essential binutils-doc gcc autoconf flex bison
  apt-get install -y libreadline5-dev zlib1g-dev libssl-dev libxml2-dev libxslt1-dev
  apt-get install -y libcurl4-gnutls-dev dtach
  #bash < <(curl -sk https://rvm.beginrescueend.com/install/rvm)
  curl -s https://rvm.beginrescueend.com/install/rvm -o /usr/bin/rvm-installer ; chmod +x /usr/bin/rvm-installer ; rvm-installer --version 1.6.11
  (

  echo '[[ -s "/usr/local/rvm/scripts/rvm" ]] && . "/usr/local/rvm/scripts/rvm"'  # This loads RVM into a shell session.
  ) > /etc/profile.d/rvm.sh
  echo "Source rvm"
  source /etc/profile
  echo "Install ruby-1.9.2"
  rvm install 1.9.2
  echo "Set ruby-1.9.2 as default"
  rvm --default 1.9.2
  echo "Installing basic gems"
  rvm gemset use global && gem install bundler ohai chef --no-rdoc --no-ri --verbose
  rvm gemset clear
  ln -nfs $(which chef-solo) /usr/bin/chef-solo
fi

echo "Source rvm (again)"
source /etc/profile

